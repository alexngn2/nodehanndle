
<div class="container">
  <div class="row">
    <div class="m-1 col bg-info">
      <h2>Burgers You Currently Have</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="m-1 col bg-warning">
      <h2>Burgers You Have Eaten</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="mb-5 row bg-success">
    <div class="col-6">
      <h2>Add a Burger You Want to Eat</h2>
      <form id="create-form">

        <div class="form-group">
          <label for="burgerName">Burger Name:</label>
          <input type="text" id="burgerName" name="name">
        </div>


        <button class="mb-2 btn btn-primary" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>